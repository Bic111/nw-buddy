{
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "compression": "maximum",
  "files": [
    "dist/**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    "!yarn.json",
    "!*.gz"
  ],
  "extraResources": [

  ],
  "win": {
    "icon": "dist/web/assets/icons",
    "target": [
      "portable"
    ]
  },
  "portable": {
    "splashImage": "dist/web/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/web/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/web/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
