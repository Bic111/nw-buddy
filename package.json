    "@angular/router": "13.2.6",
    "ag-grid-community": "27.0.1",
    "chart.js": "3.7.1",
    "daisyui": "2.14.2",
    "loadsh": "0.0.4",
    "mithril": "2.0.4",
    "rxjs": "7.4.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
