{
  "name": "nw-buddy",
  "version": "1.0.0-rc3",
  "description": "New World Buddy",
  "keywords": [],
  "main": "dist/electron/main.js",
  "private": true,
  "author": "Ginie",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "dev": "npm-run-all -p dev:electron dev:web",
    "dev:electron": "npm run electron:serve",
    "dev:web": "npm run web:serve",
    "build": "npm run electron:tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "storybook": "ng run nw-buddy:storybook",
    "storybook:build": "ng run nw-buddy:build-storybook",
    "web:serve": "ng serve -c web -o",
    "electron": "electron",
    "electron:tsc": "tsc -p apps/electron/tsconfig.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:build": "npm run build:prod && electron-builder build --publish=never",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run build:prod && playwright test -c e2e/playwright.config.ts e2e/",
    "e2e:show-trace": "playwright show-trace e2e/tracing/trace.zip",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint",
    "nw-import": "ts-node ./tools/nw-import.ts ../nw-extract/out/live ./apps/web/nw-data"
  },
  "dependencies": {
    "@angular/common": "13.2.6",
    "@angular/compiler": "13.2.6",
    "@angular/core": "13.2.6",
    "@angular/forms": "13.2.6",
